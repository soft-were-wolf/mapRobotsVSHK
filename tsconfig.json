{
    "compilerOptions": {
        "lib": ["ES2020", "DOM", "DOM.Iterable"],
        "jsx": "react-jsx",
        "module": "es2022",
        "target": "es2015",
        "moduleResolution": "Node",
        "baseUrl": "./src",
        "paths": {
            "@/*": [
                "*"
            ],
        },
        "allowSyntheticDefaultImports": true,
    },
    "include": [
        "vite-env.d.ts",
        "src",
        "**/*.ts",
        "**/*.tsx",
    ],
    "exclude": [
        "node_modules"
    ]
}